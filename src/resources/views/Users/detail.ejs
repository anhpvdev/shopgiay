              </div>

              <div class="block-7">
                <form action="#" method="post">
                  <label for="email_subscribe" class="footer-heading"
                    >Đặt mua</label
                  >
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control py-4"
                      id="email_subscribe"
                      placeholder="Email"
                    />
                    <input
                      type="submit"
                      class="btn btn-sm btn-primary"
                      value="Gửi"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!--  -->
      </footer>
    </div>
    <script src="../../../public/Scripts/sizeSelection.js"></script>
    <script src="../../../public/scripts/jquery-3.3.1.min.js"></script>
    <script src="../../../public/scripts/jquery-ui.js"></script>
    <script src="../../../public/scripts/popper.min.js"></script>
    <script src="../../../public/scripts/bootstrap.min.js"></script>
    <script src="../../../public/scripts/owl.carousel.min.js"></script>
    <script src="../../../public/scripts/jquery.magnific-popup.min.js"></script>
    <script src="../../../public/scripts/aos.js"></script>

    <script src="../../../public/scripts/main.js"></script>
  </body>
</html>

